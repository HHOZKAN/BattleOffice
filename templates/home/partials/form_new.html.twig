                    {{ form_row(form.addressBilling.codePostal) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_row(form.addressBilling.pays) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_row(form.addressBilling.telephone) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_row(form.client.email) }}
                    <div class="form-error"></div>
                </div>
            </div>
        </div>
        <ul class="collapsible">
            <li>
                <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
                <div class="collapsible-body">
                    <div class="input-field">
                        {{ form_row(form.client.firstname) }}
                        <div class="form-error"></div>
                    </div>
                    <div class="input-field">
                        {# {{ form_row(form.client.nom) }} #}
                        <div class="form-error"></div>
                    </div>
                    <div class="input-field">
                        {# {{ form_row(form.addressShipping.adresse) }} #}
                        <div class="form-error"></div>
                    </div>
                    <div class="input-field">
                        {# {{ form_row(order.addressShipping.complAdresse) }} #}
